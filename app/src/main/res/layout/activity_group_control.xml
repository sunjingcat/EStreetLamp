<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/white" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分组控制"
            android:textColor="@color/colorTextBlack33"
            android:textSize="18dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="16dp"
                    android:background="#444564" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="分组控制"
                    android:textColor="#444444"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/control_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_real"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="  全选" />
            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/control_light_type_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_real"
                    android:drawablePadding="8dp"
                    android:checked="true"
                    android:text="  全部" />

                <RadioButton
                    android:id="@+id/control_light_type_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_real"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="  主灯" />

                <RadioButton
                    android:id="@+id/control_light_type_aux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_real"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="  辅灯" />
            </RadioGroup>
            <include layout="@layout/refresh_layout" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/control_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_5_ffc750"
            android:text="拉闸"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/control_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_5_4480d6"
            android:text="合闸"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/control_adjust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_5_bd7a70"
            android:text="调光"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
</LinearLayout>