<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_group_1"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_group_1" />

    <ImageView
        android:id="@+id/main_group_2"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="100dp"
        android:src="@drawable/main_group_2" />

    <ImageView
        android:id="@+id/main_group_3"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="180dp"
        android:src="@drawable/main_group_3" />

    <ImageView
        android:id="@+id/main_group_4"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="180dp"
        android:src="@drawable/main_group_4" />

    <ImageView
        android:id="@+id/main_group_5"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="100dp"
        android:src="@drawable/main_group_5" />

    <ImageView
        android:id="@+id/main_group_6"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:src="@drawable/main_group_6" />


</LinearLayout>