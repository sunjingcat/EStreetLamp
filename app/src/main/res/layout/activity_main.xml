<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/main_group_1"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:src="@drawable/main_group_1" />

    <ImageView
        android:id="@+id/main_group_2"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_weight="1"
        android:src="@drawable/main_group_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:src="@drawable/main_left_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_group_3"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:src="@drawable/main_group_3" />

            <ImageView
                android:id="@+id/main_group_4"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/main_group_4" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/main_group_5"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_weight="1"
        android:src="@drawable/main_group_5" />

    <ImageView
        android:id="@+id/main_group_6"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:src="@drawable/main_group_6" />

    </LinearLayout>
</RelativeLayout>