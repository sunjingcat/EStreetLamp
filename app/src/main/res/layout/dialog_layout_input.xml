<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/bg_frame_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:background="#444564" />

        <TextView
            android:id="@+id/lblDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#444444"
            android:textSize="18dp"
            tools:text="集中器" />

    </LinearLayout>


    <EditText
        android:id="@+id/lblDialogMessage"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:hint="请输入名称（最多10个字）"
        android:background="#F7F8FF"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:layout_marginBottom="10dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lblNegative"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_30_9c"
            android:text="取消"
            android:textColor="#9C5F23"
            android:textSize="14sp" />
        <View
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/lblPositive"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_30_f6"
            android:text="确定"
            android:textColor="#9C5F23"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>