<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".business.mine.AboutActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/white" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关于我们"
            android:textColor="@color/colorTextBlack33"
            android:textSize="18dp" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/tv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/textLeftStyle"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/colorTextBlack33"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_version"
        style="@style/textLeftStyle"
        android:layout_marginTop="10dp"
        android:text="V1.0"
        android:textColor="@color/colorTextBlack33"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_info"
        style="@style/textLeftStyle"
        android:layout_marginHorizontal="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text=""
        android:textColor="@color/colorTextBlack99"
        android:textSize="14dp" />

    <Button
        android:id="@+id/bt_update"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_radius_10_f6"
        android:text="检查版本更新"
        android:textColor="#9C5F23" />
</LinearLayout>