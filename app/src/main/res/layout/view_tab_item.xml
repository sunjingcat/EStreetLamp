<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="2dp">

    <FrameLayout
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/tab_item_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/tab_control" />


        <ImageView
            android:id="@+id/tab_item_unread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="2dp"
            android:visibility="gone" />


        <com.zz.lamp.widget.DragPointView
            android:id="@+id/rc_msg_num"
            android:layout_width="wrap_content"
            android:minWidth="15dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:background="@drawable/border_radius_red"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="10dp"

            />

    </FrameLayout>

    <TextView
        android:id="@+id/tab_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:text="控制"
        android:textColor="@drawable/btn_title_text_selector_yellow"
        android:textSize="12dp" />

</LinearLayout>
